
<h1>Employee List</h1>

<table style = "border: 1px solid black" >
  <thead >
    <tr>
      <th>Mentor Id</th>
      <th>Name</th>
      <th>Email</th>
      <th>Gender</th>
      <th>role</th>
      <th>address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee.each do |employee| %>
      <tr>
        <td><%= employee.mentor_id %></td>
        <td><%= employee.name %></td>
        <td><%= employee.email %></td>
        <td><%= employee.gender %></td>
        <td><%= employee.role %></td>
        <td><%= employee.address %></td>
        <!-- <td><%#= link_to 'Show',dashboard_path(employee) %></td> -->
        <td><%= link_to 'Edit', "/edit_employee/#{employee.id}" %></td>
        <td><%= button_to 'Destroy', loggout_path, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
        <%#= button_to 'logout',logout_path,method: :delete, class:'nav-link'%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<style type="text/css">
  table, th, td {
  border: 1px solid black;
}
</style>
